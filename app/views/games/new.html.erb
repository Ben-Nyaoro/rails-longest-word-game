<div style= "width: 500px; padding: 8px 20px; margin: 0px auto; border-radius: 4px; text-align:center;	">
	<h1>New Game</h1>

	<h3>Your luck letters are:</h3>

	<div>
		<div>
			<table>
					<tr style="color:white">
						<% @letters.each do |letter| %>
						<th width="50px" height="50px" style="border: 1px solid #469ae0; text-align: center; font-size: 20px; font-weight: bold; vertical-align: middle; background-color: #469ae0">
							<%= letter.upcase %>           
						</th>
						<% end %>
					</tr>
				</table>
		</div>	

		<div>
			<h3 style="padding: 8px">What is the longest word you can form</h3>
			<form action="/score" method="get">
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<%= hidden_field_tag :letters, @letters %>
				<input type="text" name="word" placeholder="Please enter your word here!" value="<%= params[:word] %>"  style= "width: 100%; padding: 12px 20px; margin: 8px 0; box-sizing: border-box;">
				<input type="submit" value="Play" style= "width: 100%; padding: 12px 20px; margin: 8px 0; color: white; background-color: green; border-radius: 4px;">
			</form>
		</div>
	</div>
</div>

